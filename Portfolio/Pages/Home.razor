@page "/"
@using Portfolio.UIComponents;
@using Portfolio.Components;

<section id="hero" class="hero-landing" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
  <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width: 80%;">
    <p class="cursor typewriter-animation" style="margin-bottom: 2rem;">Hi, I’m Sam</p>
    <RadzenText TextStyle="TextStyle.H2"
                Text="I'm a Full Stack Developer studying Computer Science!"
                TextAlign="TextAlign.Center"
                class="hero-sub" />
  </RadzenStack>
</section>



<section id="about-me" class="about-hero">
  <div class="about-head">
    <h1 class="about-title"><span>About Me</span></h1>
  </div>

  <div class="about-content">
    <!-- Left: avatar + text -->
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" class="about-bio">
      <RadzenImage Path="about_me.png" class="about-avatar" />
      <RadzenText TextAlign="TextAlign.Center" class="about-text">
        Hi, my name is Samuel McIlrath and I am a May 2026 grad majoring in CS with a minor in Mathematics.
        I have experience with front and back end development, IaC, automation, and systems programming.
        I have numerous contributions to in‑prod apps supporting real business operations, and I'm driven by opportunities to build software that solves meaningful problems.
      </RadzenText>
    </RadzenStack>

    <!-- Right: skills (your existing card, just wrapped) -->
    <RadzenStack Orientation="Orientation.Vertical" class="about-skills">
      <RadzenText TextStyle="TextStyle.H2" Text="Skills" class="about-skills-title" />
      <div class="skill-card-border">
        <RadzenCard class="inner-card about-card" Variant="Variant.Filled">
          <!-- your existing groups unchanged -->
          <RadzenStack Orientation="Orientation.Vertical">
            <!-- Languages -->
            <RadzenStack Orientation="Orientation.Vertical">
              <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                <span class="line"></span>
                <RadzenText TextStyle="TextStyle.H6" Text="Languages" class="about-subhead"/>
                <span class="line"></span>
              </RadzenStack>
              <RadzenStack Orientation="Orientation.Horizontal" Style="flex-wrap: wrap !important;">
                @foreach (var pair in languages) { <SkillCard Skill="@pair.Key" ImagePath="@languages[pair.Key]" /> }
              </RadzenStack>
            </RadzenStack>

            <!-- Cloud & Infra -->
            <RadzenStack Orientation="Orientation.Vertical">
              <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                <span class="line"></span>
                <RadzenText TextStyle="TextStyle.H6" Text="Cloud & Infrastructure" class="about-subhead"/>
                <span class="line"></span>
              </RadzenStack>
              <RadzenStack Orientation="Orientation.Horizontal" Style="flex-wrap: wrap !important;">
                @foreach (var pair in cloud) { <SkillCard Skill="@pair.Key" ImagePath="@cloud[pair.Key]" /> }
              </RadzenStack>
            </RadzenStack>

            <!-- Frameworks -->
            <RadzenStack Orientation="Orientation.Vertical">
              <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                <span class="line"></span>
                <RadzenText TextStyle="TextStyle.H6" Text="Frameworks" class="about-subhead"/>
                <span class="line"></span>
              </RadzenStack>
              <RadzenStack Orientation="Orientation.Horizontal" Style="flex-wrap: wrap !important;">
                @foreach (var pair in frameworks) { <SkillCard Skill="@pair.Key" ImagePath="@frameworks[pair.Key]" /> }
              </RadzenStack>
            </RadzenStack>

            <!-- Tools -->
            <RadzenStack Orientation="Orientation.Vertical">
              <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                <span class="line"></span>
                <RadzenText TextStyle="TextStyle.H6" Text="Tools" class="about-subhead"/>
                <span class="line"></span>
              </RadzenStack>
              <RadzenStack Orientation="Orientation.Horizontal" Style="flex-wrap: wrap !important;">
                @foreach (var pair in tools) { <SkillCard Skill="@pair.Key" ImagePath="@tools[pair.Key]" /> }
              </RadzenStack>
            </RadzenStack>
          </RadzenStack>
        </RadzenCard>
      </div>
    </RadzenStack>
  </div>
</section>

<section id="work" style="min-height:100vh; padding-bottom: 1.5rem; padding-top: 1.5rem;">
    <div class="about-head">
        <h1 class="about-title"><span>Work Experience</span></h1>
    </div>
    <div style="">
        <WorkTimeline />
    </div>
</section>
<section id="projects" class="projects-hero">
  <div class="projects-head">
    <h1 class="projects-title"><span>Featured Projects</span></h1>
  </div>
  <Projects />
</section>

<section id="school">
    <h1 class="title">School</h1>
</section>

