@namespace Portfolio.Components

<div class="timeline-scroll">

    <RadzenTimeline Orientation="Orientation.Horizontal" LinePosition="LinePosition.Bottom" 
        Style="display: flex; flex-wrap:nowrap;"
    >
        <Items>
            <!--Software Developer-->
            <RadzenTimelineItem PointVariant="Variant.Outlined" PointStyle="PointStyle.Info" PointShadow="0" PointSize="PointSize.Large" Style="flex:0 0 auto; min-width:50vh; max-width: 50%; margin-right:2rem;">
                    <PointContent ><RadzenImage Path="imgs/nm_logo.png" Style="width: 80%; height: auto;"/></PointContent>
                    <ChildContent>
                        <div class="skill-card-border work-card">
                            <RadzenCard class="work-card rz-border-radius-3" Style="text-align: left; ">
                                <RadzenMarkdown class="radzen-markdown" Text="@sdMarkdown" Style="color: #121212; font-family: monospace;"/> 
                            </RadzenCard>
                        </div>
                    </ChildContent>
            </RadzenTimelineItem>

            <!--Research-->
            <RadzenTimelineItem PointVariant="Variant.Outlined" PointStyle="PointStyle.Info" PointSize="PointSize.Large" Style="flex:0 0 auto; min-width:50%; margin-right:2rem;">
                <PointContent>
                    <RadzenImage class="rz-border-radius-8" Path="imgs/wheaton_logo.png"/>
                </PointContent>
                <ChildContent>
                    <div class="skill-card-border work-card">
                        <RadzenCard class="work-card rz-border-radius-3" Style="text-align: left; ">
                            <RadzenMarkdown class="radzen-markdown"   Text="@rsMarkdown"  Style="color: #121212; font-family: monospace;"/> 
                        </RadzenCard>
                    </div>
                </ChildContent>
            </RadzenTimelineItem>

            <!--Automation-->
            <RadzenTimelineItem PointVariant="Variant.Outlined" PointStyle="PointStyle.Info" PointSize="PointSize.Large" Style="flex:0 0 auto; min-width:50%; margin-right:2rem;">
                <PointContent ><RadzenImage Path="imgs/nm_logo.png" Style="width: 80%; height: auto;"/></PointContent>
                <ChildContent>
                    <div class="skill-card-border work-card">
                        <RadzenCard class="work-card rz-border-radius-3" Style="text-align: left; ">
                            <RadzenMarkdown class="radzen-markdown"   Text="@atMarkdown"  Style="color: #121212; font-family: monospace;"/> 
                        </RadzenCard>
                    </div>
                </ChildContent>
            </RadzenTimelineItem>
            <!--IT-->
            <RadzenTimelineItem PointVariant="Variant.Outlined" PointStyle="PointStyle.Info" PointSize="PointSize.Large" Style="flex:0 0 auto; min-width:50%; margin-right:2rem;">
                <PointContent> <RadzenImage class="rz-border-radius-8" Path="imgs/huf_logo.jpeg" /> </PointContent>
                <ChildContent>
                    <div class="skill-card-border work-card">
                        <RadzenCard class="work-card rz-border-radius-3" Style="text-align: left; ">
                            <RadzenMarkdown class="radzen-markdown"   Text="@itMarkdown"  Style="color: #121212; font-family: monospace;"/> 
                        </RadzenCard>
                    </div>
                </ChildContent>
            </RadzenTimelineItem>
        </Items>
    </RadzenTimeline>
</div>
