@page "/"
@using Portfolio.UIComponents;
@using Portfolio.Components;

<section id="hero" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width: 80%;">
        <p class="cursor typewriter-animation" style="margin-bottom: 2rem;">
      Hi, I’m Sam
    </p>
        <RadzenText
            class="
                animation-container
                animate__animated
                animate__fadeInUp
                animate__delay-2s"
            TextStyle="TextStyle.H2"
            Text="I'm a Full Stack Developer studying Computer Science!"
            TextAlign="TextAlign.Center"
            Style="width: 80%; font-family: monospace;"/>
    </RadzenStack>
</section>

<section id="about-me" style=" display: flex; align-items: center; justify-content: center; background-color: rgb(40, 54, 60)!important; padding-bottom: 1.5rem; border-radius: 0.8rem;">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width: 75%">
        <h1 class="title">About Me</h1> 
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" JustifyContent=" JustifyContent.SpaceBetween" Style="align-self: center;">
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="justify-self: center !important; align-self: center !important; max-width: 500px;">
                <RadzenImage Path="about_me.png" Style="width: 8rem; height: auto;"/>
                <RadzenText TextStyle="TextStyle.H6" TextAlign="TextAlign.Start" Style="font-family: monospace; line-height: 2rem; color: white; font-weight: 5rem;">
                    Hi, my name is Samuel McIlrath and I am a May 2026 grad majoring in CS with a minor in Mathematics. 
                    I have experience with front and back end development, IaC, automation, and systems programming. 
                    I have numerous contributions to in prod apps supporting real business operations, and I'm driven by opportunities to build software that solves meaningful problems.
                </RadzenText>
            </RadzenStack>

            <!-- Skills section -->
            <RadzenStack Orientation="Orientation.Vertical" Style="width: 100%; max-width: 25rem; height: 100%; min-height: 100%;">
               
                <RadzenText TextStyle="TextStyle.H2" Text="Skills" Style="align-self: center; color: white"/>
                <div class="skill-card-border">
                    <RadzenCard class="inner-card rz-border-radius-4" Variant="Variant.Filled" Style="width: 100%; min-width: 15rem;  background-color: #121212;">
                        <!-- Skill Groupings -->
                        <RadzenStack Orientation="Orientation.Vertical">
                            <!--Languages -->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Languages" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Language Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in languages)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@languages[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                            <!--Cloud-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Cloud & Infrastructure" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Language Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in cloud)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@cloud[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                            <!--Frameworks-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Frameworks" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in frameworks)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@frameworks[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                             <!--Tools-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Tools" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in tools)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@tools[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenStack>
                    </RadzenCard>
                </div>
            </RadzenStack>

        </RadzenStack>
    </RadzenStack>
    
</section> 
<section id="work" style="min-height:100vh; padding-bottom: 1.5rem;">
    <h1 class="title">Work History</h1>
    <div style="">
        <WorkTimeline />
    </div>
</section>
<section id="projects" class="projects-hero">
  <div class="projects-head">
    <h1 class="projects-title"><span>Featured Projects</span></h1>
  </div>

  <Projects />
</section>

<section id="school">
    <h1 class="title">School</h1>
</section>

