@page "/"
@using Portfolio.UIComponents;
@using Portfolio.Components;

<section id="hero" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width: 80%;">
        <div class="text-shadows">
            Hi, I'm Sam!
        </div>

        @* <RadzenText
            class="gradient-text-rev rz-pt-12"
            Text="Hi, I'm Sam!"
            TextStyle="TextStyle.H1"
            TextAlign="TextAlign.Center"
            Style="!important; color: white;" /> *@
        <RadzenText
            class=""
            TextStyle="TextStyle.H2"
            Text="I'm a Full Stack Developer studying Computer Science!"
            TextAlign="TextAlign.Center"
            Style="width: 80%"/>
    </RadzenStack>
</section>

<section id="about-me" style=" display: flex; align-items: center; justify-content: center;">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
        <RadzenText
            class="gradient-text rz-pt-10"
            TextStyle="TextStyle.H1"
            Text="About Me"
            TextAlign="TextAlign.Center" 
        />
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" JustifyContent=" JustifyContent.SpaceBetween" Style="">
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="width: 90%">
                <RadzenImage Path="about_me.png" Style="width: 10rem; height: auto;"/>
                <RadzenCard class="rz-border-radius-4" Style="width:80%">
                    <RadzenText TextStyle="TextStyle.H4">
                        Hi, my name is Samuel McIlrath and I am a May 2026 grad majoring in CS with a minor in Mathematics. 
                        I have experience with front and back end development, IaC, automation, and systems programming. 
                        I have numerous contributions to in prod apps supporting real business operations, and I'm driven by opportunities to build software that solves meaningful problems.
                    </RadzenText>
                </RadzenCard>
            </RadzenStack>

            <!-- Skills section -->
            <RadzenStack Orientation="Orientation.Vertical" Style="width: 100%; max-width: 25rem; height: 100%; min-height: 100%;">
               
                <RadzenText TextStyle="TextStyle.H2" Text="Skills" Style="align-self: center;"/>
                <div class="skill-card-border">
                    <RadzenCard class="inner-card rz-border-radius-4" Variant="Variant.Filled" Style="width: 100%; min-width: 15rem;  background-color: #121212;">
                        <!-- Skill Groupings -->
                        <RadzenStack Orientation="Orientation.Vertical">
                            <!--Languages -->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Languages" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Language Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in languages)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@languages[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                            <!--Cloud-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Cloud & Infrastructure" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Language Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in cloud)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@cloud[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                            <!--Frameworks-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Frameworks" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in frameworks)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@frameworks[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                             <!--Tools-->
                            <RadzenStack Orientation="Orientation.Vertical">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                                    <span class="line"></span>
                                    <RadzenText TextStyle="TextStyle.H6" Text="Tools" Style="color: white;"/>
                                    <span class="line"></span>
                                </RadzenStack>    
                                <!--Cards-->
                                <RadzenStack Orientation="Orientation.Horizontal"Style="flex-wrap: wrap !important;">
                                    @foreach(var pair in tools)
                                    {   
                                        <SkillCard Skill="@pair.Key" ImagePath="@tools[pair.Key]"/>
                                    }
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenStack>
                    </RadzenCard>
                </div>
            </RadzenStack>

        </RadzenStack>
    </RadzenStack>
    
</section> 
<section id="work">
    <RadzenText TextStyle="TextStyle.H1" Text="Work"/>
</section>