                        Company="STERIS/Hu-Friedy"
                        StartDate="MAY 2023"
                        EndDate="AUG 2023"
                    />
                </ChildContent>
            </RadzenTimelineItem> *@
        </Items>
    </RadzenTimeline>
</div>
